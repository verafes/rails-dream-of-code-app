<p style="color: green"><%= notice %></p>

<%= render @course %>
<% if session[:role] != "student" %>
  <div>
    <%= link_to "All Submissions", course_submissions_path(@course) %> 
  </div>
<% end %>
<div>
  <% if session[:role] != "student" %>
    <%= link_to "Edit this course", edit_course_path(@course) %> |
  <% end %>
  <% if session[:role] == "student" %>
    <%= link_to "New Submission", new_course_submission_path(@course) %>
  <% end %>
  <%= link_to "Back to courses", courses_path %>
  <% if session[:role] == "admin" %> | 
    <%= link_to "Back to dashboard", dashboard_path %>
  <% end %>
  <% if session[:role] != "student" %>
    <%= button_to "Delete this course", @course, method: :delete %>
  <% end %>
</div>
