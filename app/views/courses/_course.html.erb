<div id="<%= dom_id course %>">
  <p>
    <strong>Coding class:</strong>
    <%= course.coding_class.title %>
  </p>

  <p>
    <strong>Trimester:</strong>
    <%= "#{course.trimester.term} #{course.trimester.year}" %>
  </p>

  <strong>Enrolled students</strong>
  <ul>
    <% course.enrollments.each do |enrollment| %>
          <li><%= enrollment.student.full_name %></li>
    <% end %>
  </ul>
  <p>
    <%= link_to "View enrolled students", course_enrolled_students_path(course) %>
  </p>

  <p>
    <strong>Max enrollment:</strong>
    <%= course.max_enrollment %>
  </p>

</div>
