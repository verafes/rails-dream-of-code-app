<% content_for :title, "Students" %>

<h1>Students</h1>

<%= link_to "Sort by Last Name",  "/students/sorted_students", class: "btn btn-primary" %>

<div id="students">
  <% @students.each do |student| %>
    <%= render student %>
    <p>
      <%= link_to "Show this student", student %>
    </p>
  <% end %>
</div>

<%= link_to "New student", new_student_path %>
